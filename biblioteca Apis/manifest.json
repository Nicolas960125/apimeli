{
    "name": "Biblioteca APIS ML",
    "description": "Conjunto de herramientas con el fin de optimizar los tiempos de respuesta a nuestros usuarios",
    "version": "1.2",
    "background": {
        "scripts": ["JS/jquery-3.3.1.min.js", "JS/background.js", "JS/visual_option.js", "JS/bootstrap.min.js"],
        "persistent": false

    },
    "permissions": [
        "activeTab",
